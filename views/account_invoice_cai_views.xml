<?xml version="1.0" ?>
<odoo>      

  <!-- Company Restricted Rule for CAI -->
  <record id="account_invoice_cai_restricted_rul" model="ir.rule">
     <field name="name"> Restricted Record: Multi-Company </field>
     <field name="model_id" ref="model_account_invoice_cai" />
     <field name="global" eval="True"/>
     <field name="domain_force">
        [('company_id', 'in', company_ids)]
     </field>
  </record>

  <!-- Configuration CAI and its validity -->
    <record id="account_invoice_cai_action" model="ir.actions.act_window">
      <field name="name">CAIs</field>
      <field name="res_model">account.invoice.cai</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
           Define a new or Active CAI
        </p><p>
           Use this to manage active CAI to attach to Invoice
        </p>
      </field>
    </record>
    <record id="account_invoice_cai_view_tree" model="ir.ui.view">
      <field name="name">account.invoice.cai.tree</field>
      <field name="model">account.invoice.cai</field>
      <field name="arch" type="xml">
        <tree string="CAI List" default_order="id desc">
          <field name="cai" />
          <field name="rango" />
          <field name="al" />
          <field name="fecha_limite" />
          <field name="next_val"/>
          <field name="is_active" />
        </tree>
      </field>
    </record>
    <record id="account_invoice_cai_view_form" model="ir.ui.view">
      <field name="name">account.invoice.cai.form</field>
      <field name="model">account.invoice.cai</field>
      <field name="arch" type="xml">
        <form string="CAI Form">
          <sheet>
            <group>
            </group>
            <group >
              <field name="cai" />
            </group>
            <group>
               <group>
                  <field name="rango"/>                
               </group>
               <group>
                <field name="al"/>
               </group>
            </group>
            <group>
                <field name="fecha_limite"/>
            </group>
            <group>
              <field name="is_active"/>
            </group>

            <group>
               <field name="start"/>
               <field name="end" />
               <field name="next_val" />
               <field name="prefix" />
               <field name="padding" />
            </group>
            <notebook>
               <page string="Generated Numbers">
                 <field name="invoice_ids">
                    <tree>
                        <field name="factura" />
                    </tree>
                 </field>
               </page>
            </notebook>
         </sheet>
      </form>
     </field>
    </record>       

  <!-- Company Restricted Rule for CAI -->
  <record id="account_invoice_cai_invoice_restricted_rule" model="ir.rule">
     <field name="name"> Restricted Record: Multi-Company </field>
     <field name="model_id" ref="model_account_move" />
     <field name="global" eval="True"/>
     <field name="domain_force">
        [('company_id', 'in', company_ids)]
     </field>
  </record>

</odoo>