<?xml version="1.0" ?>
<odoo>
  <record id="account_invoice_cai_view_tree" model="ir.ui.view">
    <field name="name">account.invoice.cai.tree</field>
    <field name="model">account.invoice.cai</field>
    <field name="arch" type="xml">
      <tree string="CAI Management">
        <field name="cai_code"/>
        <field name="cai_range_start" />
        <field name="cai_range_end" />
        <field name="cai_expiry"/>
      </tree>
    </field>
  </record>

  <record id="account_invoice_cai_view_wizard" model="ir.ui.view">
    <field name="name">account.invoice.cai.form</field>
    <field name="model">account.invoice.cai</field>
    <field name="arch" type="xml">
      <form string="CAI Configuration Wizard" class="oe_dark">
        <sheet>

          <group string="Please Fill Below Information">
            <group colspan="2">
              <field name="cai_code" string="CAI: " placeholder="XXXXXX-XXXXXX-XXXXXX-XXXXXX-XXXXXX-XX" style="background-color:#f4f4f4;"/>
            </group>
            <group col="2">
              <field name="cai_range_start" string="RANGO: " placeholder="000-000-00-00000000" style="background-color:#f4f4f4;"/>
              <field name="cai_expiry" string="FETCHA LIMITE: " placeholder="DD/MM/YYYY" style="background-color:#f4f4f4;"/>
            </group>
            <group >
              <field name="cai_range_end" string=" - " placeholder="000-000-00-00000000" style="background-color:#f4f4f4;"/>
            </group>
          </group>
          <notebook>
            <page string="invoices list">
              <field name="invoice_ids">
                <tree>
                  <field name="name"/>
                  <field name="factura"/>
                  <field name="invoice_date"/>
                  <field name="amount_total"/>
                  <field name="state"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>

      </form>
    </field>
  </record>
</odoo>