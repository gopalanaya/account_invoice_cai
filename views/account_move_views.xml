<?xml version="1.0" ?>
<odoo>
<record id="view_move_form_inherit_cai" model="ir.ui.view">
   <field name="name">account.move.form.inherited.cai</field>
   <field name="model">account.move</field>
   <field name="inherit_id" ref="account.view_move_form" />
   <field name="arch" type="xml">
     <xpath expr="//field[@name='invoice_date']" position="after">     
     <field name="cai_number_id" attrs="{'invisible': [('id', '=', 1)]}" />                                                        
       <field name="factura_preview" attrs="{'invisible': [('state', '=', 'posted')]}"/>
       <field name="cai_number" attrs="{'invisible': [('state', '=', 'draft')]}"/>
      </xpath>

      <field name="partner_id" position="after">
          <field name="vat" />
      </field>
   
   </field>
</record>
</odoo>